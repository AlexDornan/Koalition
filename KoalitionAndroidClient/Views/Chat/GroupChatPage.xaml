<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KoalitionAndroidClient.Views.Chat.GroupChatPage"
             Title="GroupChatPage">
    <StackLayout Padding="10">
        <Label FontSize="18" Text="Chat Page" />
        <CollectionView ItemsSource="{Binding Messages}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding UserName}" FontAttributes="Bold" />
                        <Label Text="{Binding TimeStamp}" FontSize="Small" TextColor="Gray" />
                        <Label Text="{Binding Text}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Entry x:Name="entryMessage" Placeholder="Enter a message" Text="{Binding NewMessage}" />
        <Button Text="Send" Command="{Binding SendMessageCommand}" />
    </StackLayout>
</ContentPage>
