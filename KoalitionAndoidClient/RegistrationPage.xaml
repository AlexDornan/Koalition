<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KoalitionAndoidClient.RegistrationPage"
             xmlns:viewModel="clr-namespace:KoalitionAndoidClient.ViewModels">

    <StackLayout Padding="30,0" Spacing="20">
        <Label Text="Registration" FontSize="Large" HorizontalOptions="Center" />

        <Label Text="Login" />
        <Entry x:Name="LoginEntry" Placeholder="Enter your Login" />
        
        <Label Text="Name" />
        <Entry x:Name="NameEntry" Placeholder="Enter your name" />

        <Label Text="Email" />
        <Entry x:Name="EmailEntry" Placeholder="Enter your email" />

        <Label Text="Password" />
        <Entry x:Name="PasswordEntry" Placeholder="Enter your password" IsPassword="True" />

        <Button Text="Register" Clicked="RegisterButton_Clicked" />
    </StackLayout>

</ContentPage>
